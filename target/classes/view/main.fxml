<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.aitorbenito.taskeasy.MainController">

    <top>
        <Label text="Gestor de tareas - TaskEasy"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10;" />
    </top>

    <center>
        <TableView fx:id="tablaTareas">
            <columns>
                <TableColumn fx:id="colTitulo" text="Título" prefWidth="200"/>
                <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="300"/>
                <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120"/>
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <GridPane hgap="10" vgap="10">
                <Label text="Título:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTitulo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Descripción:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextArea fx:id="txtDescripcion"
                          GridPane.rowIndex="1"
                          GridPane.columnIndex="1"
                          prefRowCount="5"
                          wrapText="true"/>

                <Label text="Fecha:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dpFecha" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Estado:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ChoiceBox fx:id="cbEstado" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <Button text="Agregar" onAction="#agregarTarea"/>
                <Button text="Eliminar" onAction="#eliminarTarea"/>
                <Button text="Actualizar lista" onAction="#cargarTareas"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
