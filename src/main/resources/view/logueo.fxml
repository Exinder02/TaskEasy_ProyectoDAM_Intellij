<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
    Vista de la pantalla de inicio de sesión de TaskEasy.

-->
<VBox spacing="10" alignment="CENTER"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.aitorbenito.taskeasy.ControladorLogueo"
      style="-fx-padding: 20;">

    <!--
        Título de la ventana de inicio de sesion
     -->
    <Label text="Iniciar sesión en TaskEasy"
           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <!--
        Campo para introducir el usuario, puede ser el email o el nombre de usuario
     -->
    <TextField fx:id="txtUsuario"
               promptText="Correo electrónico / Usuario"/>

    <!--
        Campo para introducir la contraseña del ususario
     -->
    <PasswordField fx:id="txtContraseña"
                   promptText="Contraseña"/>


    <!--
        Contenedor para los botones del logueo o de la creacion de usuario.
     -->
    <HBox spacing="10" alignment="CENTER">


        <!--
            Botón para iniciar sesión, llama al metodo logueo del controlador
        -->
        <Button fx:id="btnLogeo"
                text="Iniciar sesión"
                onAction="#logueo"/>


        <!--
            Botón que abre la ventana de registro de nuevos usuarios,
        -->
        <Button fx:id="btnRegister"
                text="Registrarse"
                onAction="#registro"/>

        </HBox>


    </VBox>
