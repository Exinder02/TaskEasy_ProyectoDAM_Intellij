<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
    Creamos la ventana de registro de usuarios,
-->
<VBox spacing="12" alignment="CENTER"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.aitorbenito.taskeasy.ControladorRegistro"
      style="-fx-padding: 20;">

    <!--
        Título de la ventana de registro para usuarios nuevos
    -->
    <Label text="Crear nueva cuenta"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!--
        Campo para el email del usuario
     -->
    <TextField fx:id="txtEmail" promptText="Correo electrónico"/>

    <!--
        Campo para el nombre de usuario
     -->
    <TextField fx:id="txtNombre" promptText="Nombre de usuario"/>

    <!--
        Campo para la contraseña
    -->
    <PasswordField fx:id="txtContraseña" promptText="Contraseña"/>

    <!--
        Contenedor horizontal para los botones de acción
     -->
    <HBox spacing="10" alignment="CENTER">
        <!--
            Botón para crear la cuenta, ejecuta metodo en el controlador
        -->
        <Button text="Crear cuenta" onAction="#crearCuenta"/>

        <!--
            Boton para cancelar y cerrar la ventana.
         -->
        <Button text="Cancelar" onAction="#cerrar"/>

    </HBox>


</VBox>
