<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12" alignment="CENTER"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.aitorbenito.taskeasy.RegisterController"
      style="-fx-padding: 20;">

    <Label text="Crear nueva cuenta"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="txtEmail" promptText="Correo electrónico"/>
    <TextField fx:id="txtNombre" promptText="Nombre de usuario"/>
    <PasswordField fx:id="txtPassword" promptText="Contraseña"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Crear cuenta" onAction="#crearCuenta"/>
        <Button text="Cancelar" onAction="#cerrar"/>
    </HBox>

</VBox>
